---
import config from '@config/site-config';
import BaseHead from '@components/Base/BaseHead.astro';
import Header from '@components/Header/Header.astro';
import Footer from '@components/Footer/Footer.astro';
import MobileNav from '@components/Nav/MobileNav.astro';
import { fade } from 'astro:transitions';

type Props = {
  pageTitle?: string;
  description?: string;
  image?: string;
};

const { pageTitle, description, image } = Astro.props;
const title = pageTitle
  ? `${pageTitle} | ${config.site.title}`
  : config.site.title;
---

<!DOCTYPE html>
<html lang={config.site.lang} transition:animate="none">
  <head>
    <BaseHead
      title={title}
      description={description || config.metadata.meta_description}
      image={image}
    />
  </head>
  <body class="relative flex min-h-screen flex-col bg-background">
    <Header />
    <main
      class="container flex-grow pb-4 pt-12"
      transition:animate={fade({ duration: '0.4s' })}
    >
      <slot />
    </main>
    <Footer />
    <MobileNav />
  </body>
</html>

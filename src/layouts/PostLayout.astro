---
import Comments from '@components/Article/Comments.astro';
import BaseLayout from './BaseLayout.astro';
import Header from '@components/Article/Header.astro';
import Toc from '@components/Article/Toc.astro';
import Thumbnail from '@components/Article/Thumbnail.astro';
import type { TocHeadings } from '@utils/types';

type Props = {
  title: string;
  description: string;
  publishedDate: Date;
  tags: string[];
  category: string;
  cover: ImageMetadata;
  ogImage: string;
  minutesToRead: number;
  isHeadings: boolean;
  headings: TocHeadings[];
};

const {
  title,
  description,
  publishedDate,
  tags,
  category,
  cover,
  ogImage,
  minutesToRead,
  isHeadings,
  headings,
} = Astro.props;
---

<BaseLayout title={title} description={description} image={ogImage}>
  <article
    class="prose prose-slate mt-8 max-w-none break-keep dark:prose-invert"
  >
    <Header
      category={category}
      minutesToRead={minutesToRead}
      title={title}
      description={description}
      publishedDate={publishedDate}
      tags={tags}
    />
    {isHeadings && <Toc headings={headings} />}
    <hr />
    {category === 'Project' && cover && <Thumbnail image={cover} alt={title} />}
    <slot />
    <Comments />
  </article>
</BaseLayout>

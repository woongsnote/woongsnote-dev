---
import { fmtHomeDateShort } from '@/shared/lib/date';
import type { PostEntry } from '@/shared/types';

type Props = {
  post: PostEntry;
};

const { post } = Astro.props;

const href = post.id;

const { title, publishedDate } = post.data;

const date = fmtHomeDateShort(publishedDate);
---

<li class="border-border-subtle border-b last:border-b-0">
  <a
    href={href}
    class="hover:bg-surface-hover/60 focus-visible:ring-accent/40 flex items-center px-4 py-3 transition-colors duration-150 focus-visible:ring-2 focus-visible:outline-none"
  >
    <div class="flex min-w-0 items-center gap-3.5">
      <span class="text-sub w-16 shrink-0 text-xs tabular-nums opacity-70">
        {date}
      </span>

      <span class="truncate text-[15px] font-medium tracking-tight">
        {title}
      </span>
    </div>
  </a>
</li>

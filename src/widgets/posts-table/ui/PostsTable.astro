---
import type { PostEntry } from '@/shared/types';
import PostRow from './PostRow.astro';

type Props = {
  posts: PostEntry[];
};

const { posts } = Astro.props;
---

<section class="mt-4">
  <div
    class="rounded-xl border border-border-base bg-surface"
  >
    <ul>
      {posts.map((post) => <PostRow post={post} />)}
    </ul>
  </div>
</section>

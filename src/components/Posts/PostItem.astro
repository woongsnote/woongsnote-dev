---
import FormattedDate from '@components/Date/FormattedDate.astro';
import type { Post } from '@utils/types';

const { post } = Astro.props as { post: Post };
---

<a
  href={`/${post.id}`}
  class="group grid grid-cols-[60px_1fr] border-b border-white/5 py-3"
>
  <FormattedDate date={post.data.publishedDate} />
  <span
    class="text-lg tracking-tight text-[--color-text] transition group-hover:tracking-wide group-hover:text-accent"
  >
    {post.data.title}
  </span>
</a>

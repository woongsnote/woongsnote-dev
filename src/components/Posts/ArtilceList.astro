---
import type { Post } from '@utils/types';
import ArticleItem from './ArticleItem.astro';

const { posts } = Astro.props as { posts: Post[] };
---

<!-- <ul class="mt-2 w-full space-y-2.5">
  {posts.map((post) => <ArticleItem post={post} />)}
</ul> -->
<div class="flex flex-col gap-3">
  {
    posts.map((post) => (
      <a
        href={`/${post.data.link}`}
        class="group grid grid-cols-[60px_1fr] border-b border-white/5 py-3"
      >
        <span class="text-sm text-[--color-subtle]">
          {new Date(post.data.publishedDate).getFullYear()}
        </span>

        <span class="text-lg tracking-tight text-[--color-text] transition group-hover:tracking-wide group-hover:text-white">
          {post.data.title}
        </span>
      </a>
    ))
  }
</div>

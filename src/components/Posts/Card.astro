---
import FormattedDate from '@components/Date/FormattedDate.astro';

type Props = {
  title: string;
  description: string;
  link: string;
  publishedDate: Date;
};

const { title, description, link, publishedDate } = Astro.props;
---

<article
  class="group relative w-full space-y-1 overflow-hidden break-keep rounded-lg px-4 py-2 transition-all duration-300 ease-in-out hover:bg-gray-200/90 hover:dark:bg-gray-700/90"
>
  <a href={`/blog/${link}`} class="flex flex-col space-y-2">
    <FormattedDate date={publishedDate} />
    <h3
      class="text-lg font-medium text-content transition-all ease-in-out lg:text-2xl"
    >
      {title}
    </h3>
    <p class="line-clamp-2 break-keep text-sm text-subContent/90 sm:text-base">
      {description}
    </p>
  </a>
</article>

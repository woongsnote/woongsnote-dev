---
interface Props {
  date: Date;
}

const { date } = Astro.props;

const dateOptions: Object = {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
};

const publishedDate = new Date(date).toLocaleDateString('en-US', dateOptions);
---

<time class="flex items-center">
  {publishedDate}
</time>

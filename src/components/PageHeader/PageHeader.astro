---
type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<section
  class="mx-auto flex w-full max-w-3xl flex-col gap-2 border-b pb-2 text-content">
  <h1 class="mx-auto w-full text-4xl font-black text-content lg:text-5xl">
    {title}
  </h1>
  {description && <p class="mb-2 text-sm lg:text-lg">{description}</p>}
</section>

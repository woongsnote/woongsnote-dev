---
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags?.map((tag: string) => {
      return (
        <a href={`/tags/${tag}`}>
          <span class="w-fit rounded-lg border border-none bg-gray-200 p-1 px-2 py-1 text-xs font-bold text-content hover:bg-gray-700 hover:text-white dark:bg-gray-700 dark:hover:bg-gray-200 dark:hover:text-black">
            {tag}
          </span>
        </a>
      );
    })
  }
</div>

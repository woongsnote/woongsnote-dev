---
import TagItem from './TagItem.astro';
const { tags } = Astro.props;
---

<div class="flex w-full lg:max-w-xs flex-col">
  <span class="mb-2 w-full text-xl font-black text-content md:text-2xl"
    >Tags</span
  >
  <div class="flex flex-wrap gap-3">
    {
      tags?.map((tag: string) => {
        return <TagItem url={`/tags/${tag}`} title={tag} />;
      })
    }
  </div>
</div>

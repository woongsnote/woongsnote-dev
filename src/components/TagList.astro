---
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags?.map((tag: string) => {
      return (
        <a href={`/tags/${tag}`}>
          <span class="w-fit rounded-lg border p-1 px-2 py-1 text-xs font-bold text-content hover:bg-accent hover:text-white dark:hover:text-black">
            {tag}
          </span>
        </a>
      );
    })
  }
</div>

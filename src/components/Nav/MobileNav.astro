---
import NavLink from './NavLink.astro';
import config from '@config/site-config';
import PostIcon from '@icons/PostIcon.astro';
import AboutIcon from '@icons/AboutIcon.astro';
import HomeIcon from '@icons/HomeIcon.astro';

const navLinks = config.navLinks;
---

<nav
  class="bg-background fixed bottom-0 left-0 z-50 mx-auto flex w-full items-center justify-between border-t text-subContent md:hidden md:gap-10">
  {
    navLinks.map(({ name, url }) => (
      <NavLink
        href={url}
        aria-label={`go to ${name} page`}
        class="flex flex-1 flex-col items-center justify-center py-2 text-sm hover:text-accent">
        {name === 'Home' && <HomeIcon />}
        {name === 'About' && <AboutIcon />}
        {name === 'Blog' && <PostIcon />}
        <span>{name}</span>
      </NavLink>
    ))
  }
</nav>

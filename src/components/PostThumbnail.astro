---
import { Image } from "astro:assets";
const { image, alt } = Astro.props;
---

<div
  class="mx-auto mb-4 flex items-center justify-center overflow-hidden w-fit rounded-lg"
>
  <figure
    class="mx-auto h-auto w-auto object-cover object-center duration-300 ease-in-out hover:scale-110 md:h-72"
  >
    <Image
      src={image}
      alt={alt}
      width="960"
      height="540"
      class="h-full w-full"
    />
  </figure>
</div>

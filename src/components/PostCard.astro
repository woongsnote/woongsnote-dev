---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
const { title, heroImage, pubDate, slug, description } = Astro.props;
const url = `/blog/${slug}`;
---

<article
  class="flex w-full flex-col items-start gap-2 rounded-md border p-2 hover:shadow-lg md:flex-row"
>
  <div class="h-auto w-full overflow-hidden rounded-lg shadow-sm md:w-48">
    {
      heroImage && (
        <a href={url}>
          <figure class="transiton mx-auto h-auto w-auto object-cover object-center duration-300 ease-in-out hover:scale-110">
            <Image
              src={heroImage}
              alt={title}
              width="620"
              height="288"
              quality="mid"
            />
          </figure>
        </a>
      )
    }
  </div>
  <div
    class="flex flex-col items-start gap-x-4 text-xs text-content lg:text-sm"
  >
    <FormattedDate date={pubDate} />

    <h2
      class="mt-3 text-xl font-semibold leading-6 text-content group-hover:text-accent"
    >
      <a
        href={url}
        class="underline-offset-8 hover:text-accent hover:underline"
      >
        <span class="inset-0">{title}</span>
      </a>
    </h2>
    <p class="mt-1 line-clamp-2 text-sm leading-6 text-subContent">
      {description}
    </p>
  </div>
</article>

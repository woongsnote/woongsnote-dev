---
import type { CollectionEntry } from 'astro:content';
import CardFooter from './CardFooter.astro';
import CardHeader from './CardHeader.astro';
import CardBody from './CardBody.astro';

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;

const { title, description, publishedDate, tags, cover } = post.data;

const slug = post.slug;
const mainTag = tags[0];
---

<a
  href={`/posts/${slug}`}
  class="mx-auto flex w-full flex-col items-center rounded-lg border hover:scale-105 hover:shadow-lg dark:border-gray-700"
>
  <CardHeader title={title} image={cover.src} />
  <CardBody title={title} description={description} />
  <CardFooter mainTag={mainTag} publishedDate={publishedDate} />
</a>

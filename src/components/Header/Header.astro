---
import Navigation from '@components/Nav/Navigation.astro';
import ThemeSwitcher from '../Theme/ThemeSwitcher.astro';
import config from '@config/site-config';
import SocialLink from '@components/Common/SocialLink.astro';
const githubLink = config.socialLinks.filter(
  (link) => link.name === 'github'
)[0];
---

<header
  class="fixed top-0 z-20 flex w-full border-b bg-background/90 backdrop-blur-sm">
  <div
    class="container mx-auto flex h-14 w-full max-w-screen-2xl items-center text-lg lg:text-2xl">
    <Navigation />
    <div class="flex flex-1 items-center justify-end gap-4">
      <SocialLink
        name={githubLink.name}
        svg={githubLink.svg}
        url={githubLink.url}
      />
      <ThemeSwitcher />
    </div>
  </div>
</header>

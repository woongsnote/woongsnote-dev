---
import Logo from './Logo.astro';

const { pathname } = Astro.url;

const getLinkInfo = (currentPath: string) => {
  if (currentPath === '/' || currentPath === '') {
    return {
      text: 'About',
      href: '/about',
      description: 'About 페이지로 이동',
    };
  } else if (currentPath === '/about' || currentPath === '/about/') {
    return {
      text: 'Posts',
      href: '/',
      description: '메인 페이지로 이동',
    };
  } else {
    return {
      text: 'Home',
      href: '/',
      description: '홈으로 이동',
    };
  }
};

const linkInfo = getLinkInfo(pathname);
---

<header
  role="banner"
  class="bg-background/50 sticky top-0 z-10 mx-auto flex w-full max-w-3xl items-center-safe justify-between px-4 py-2 backdrop-blur-sm lg:px-0"
>
  <Logo />

  <a
    href={linkInfo.href}
    class="hover:text-accent pr-2 text-center text-sm lg:pr-0 lg:text-base"
    title={linkInfo.description}
    data-astro-reload
  >
    {linkInfo.text}
  </a>
</header>

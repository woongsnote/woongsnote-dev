---
import { Image } from 'astro:assets';
import logoImage from '@assets/logo.png';
---

<a href="/" class="flex place-items-center gap-2" aria-label="Go to Homepage">
  <figure aria-hidden="true">
    <Image
      src={logoImage}
      alt="home"
      class="size-12 rounded-md shadow-lg"
      loading="eager"
    />
  </figure>
  <span class="hidden text-2xl font-black text-content drop-shadow-lg md:block"
    >Woongsnote</span
  >
  <span class="sr-only">Go to Homepage</span>
</a>

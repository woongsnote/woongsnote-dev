---
interface Props {
  href: string;
  text: string;
  description: string;
}

const { href, description, text } = Astro.props;
---

<a
  href={href}
  aria-label={description}
  title={description}
  class="hover:text-accent rounded-md px-3 py-1.5 text-sm font-medium transition-colors lg:text-base"
>
  {text}
</a>

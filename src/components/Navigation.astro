---
import menu from '@config/menu.json';
import AboutIcon from '@icons/AboutIcon.astro';
import HomeIcon from '@icons/HomeIcon.astro';
import PostIcon from '@icons/PostIcon.astro';

export type NavigationLink = {
  name: string;
  url: string;
};

const { main }: { main: NavigationLink[] } = menu;
---

<!-- icon for mobile text for desktop or mobile for hamburger -->
<nav class="flex items-center gap-8">
  {
    main.map(({ name, url }) => (
      <a href={url} aria-label={`move to ${name} page`} class="flex items-center gap-1">
        <span class="block">
          {name === 'Home' ? <HomeIcon /> : ''}
          {name === 'About' ? <AboutIcon /> : ''}
          {name === 'Blog' ? <PostIcon /> : ''}
        </span>
        <span class="hidden md:block">{name}</span>
      </a>
    ))
  }
</nav>

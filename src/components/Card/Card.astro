---
import Title from './Title.astro';
import Description from './Description.astro';
import FormattedDate from '@components/Common/FormattedDate.astro';
import Category from './Category.astro';

type Props = {
  title: string;
  description: string;
  publishedDate: Date;
  tags: string[];
  link: string;
  category?: string;
};

const { title, description, publishedDate, tags, link, category } = Astro.props;
const mainTag = tags[0];
---

<article
  class="group relative transform transition duration-200 hover:translate-x-3">
  <a href={link} class="mx-auto flex w-full max-w-3xl flex-col rounded-lg">
    {category && <Category category={category} />}
    <Title title={title} />
    <Description description={description} />
    <p class="flex gap-2 text-sm text-content">
      <FormattedDate date={publishedDate} />
      <span>â€• {mainTag}</span>
    </p>
  </a>
</article>

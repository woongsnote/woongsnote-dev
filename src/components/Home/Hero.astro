---
import ViewMore from './ViewMore.astro';

const blogTitleText = '새로운 기술 학습을 통한 성장의 여정';
const blogDescription =
  '새로운 기술을 학습하고, 프로젝트에 적용해서 성장하는 경험의 기록 모음';
---

<section class="hero">
  <div
    class="hero-content max-w-2xl flex-col gap-4 py-8 text-center lg:gap-8 lg:py-12"
  >
    <h1 class="break-keep text-4xl font-bold text-content md:text-5xl">
      {blogTitleText}
    </h1>
    <p class="mx-auto w-full break-keep text-subContent lg:text-lg">
      {blogDescription}
    </p>
    <ViewMore />
  </div>
</section>

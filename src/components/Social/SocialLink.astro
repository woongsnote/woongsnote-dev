---
import { Icon } from 'astro-icon/components';
type Props = {
  url: string;
  name: string;
};
const { url, name } = Astro.props;
---

<a
  href={url}
  target="_blank"
  aria-label={`${name} link`}
  aria-describedby={`${name} icon`}
>
  <Icon
    name={name}
    class="size-12 cursor-pointer fill-current p-3 text-gray-400 hover:scale-110 hover:text-black dark:text-gray-700 dark:hover:text-white"
  />
  <span class="sr-only">Go to {name} page</span>
</a>

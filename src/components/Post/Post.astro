---
import TagList from '@components/Tag/TagList.astro';
import Header from './Header.astro';
import Title from './Title.astro';
import Description from './Description.astro';

type Props = {
  title: string;
  description: string;
  publishedDate: Date;
  tags: string[];
  link: string;
  category: string;
};

const { title, description, publishedDate, tags, link, category } = Astro.props;
---

<article
  class="group relative w-full overflow-hidden break-keep rounded-lg border p-2 transition-colors duration-300 ease-in-out hover:bg-gray-100/90 hover:dark:bg-gray-700/90 lg:p-4"
>
  <a
    href={link}
    class="flex flex-col space-y-2"
    data-astro-history="auto"
    data-astro-prefetch="tap"
  >
    <Header category={category} publishedDate={publishedDate} />
    <Title title={title} />
    <TagList tags={tags} />
    <Description description={description} />
  </a>
</article>

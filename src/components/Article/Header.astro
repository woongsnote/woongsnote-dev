---
import ShareButton from '@components/Article/ShareButton.astro';
import FormattedDate from '@components/Date/FormattedDate.astro';
import ReadingTimeText from '@components/ReadingTime/ReadingTimeText.astro';
import TagList from '@components/Tag/TagList.astro';

type Props = {
  title: string;
  description: string;
  publishedDate: Date;
  tags: string[];
  minutesToRead: number;
  category: string;
  link: string;
};

const {
  minutesToRead,
  title,
  description,
  publishedDate,
  tags,
  category,
  link,
} = Astro.props;
---

<div class="flex flex-col gap-4">
  <h1 class="break-keep text-3xl font-medium leading-tight">
    {title}
  </h1>
  <div class="flex items-center justify-between gap-2 text-sm lg:text-base">
    <div class="flex gap-2 text-gray-600">
      <FormattedDate date={publishedDate} />
      <ReadingTimeText readingTime={minutesToRead} />
    </div>
    <ShareButton title={title} url={link} />
  </div>
  <p class="break-keep">{description}</p>
  <TagList tags={tags} />
</div>

---
import TOC from '@components/TOC/TOC.astro';

const { headings } = Astro.props;
---

<details
  open
  class="not-prose mx-auto mt-8 w-full max-w-3xl rounded-lg border border-black/15 text-content dark:border-white/20"
>
  <summary
    class="cursor-pointer px-3 py-1.5 transition-colors hover:bg-black/5 dark:hover:bg-white/5"
    >목차</summary
  >
  <TOC headings={headings} />
</details>

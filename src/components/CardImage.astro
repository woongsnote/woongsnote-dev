---
import { Image } from 'astro:assets';
const { title, image } = Astro.props;
---

<div class="h-auto w-full overflow-hidden rounded-t-lg shadow-sm md:h-40">
  <figure
    class="transiton mx-auto h-full w-full object-cover object-center duration-300 ease-in-out hover:scale-110"
  >
    <Image
      src={image}
      alt={title}
      width="200"
      height="200"
      class="h-full w-full"
    />
  </figure>
  <span class="sr-only">Go to ${title} page</span>
</div>

---
import { Image } from 'astro:assets';
const { title, image, url } = Astro.props;
---

<a class="h-auto w-full overflow-hidden rounded-lg shadow-sm" href={url}>
  <figure
    class="transiton mx-auto h-full w-full object-cover object-center duration-300 ease-in-out hover:scale-110"
  >
    <Image
      src={image}
      alt={title}
      width="200"
      height="200"
      class="h-full w-full"
    />
  </figure>
  <span class="sr-only">Go to ${title} page</span>
</a>

---
import { Image } from 'astro:assets';

const { title, image } = Astro.props;
---

<div class="h-auto w-full overflow-hidden shadow-sm md:h-44 rounded-lg">
  {
    image && (
      <figure class="transiton mx-auto h-full w-full object-cover object-center duration-300 ease-in-out hover:scale-110">
        <Image
          src={image}
          alt={title}
          width="320"
          height="180"
          quality="mid"
          class="h-full w-full"
        />
      </figure>
    )
  }
</div>

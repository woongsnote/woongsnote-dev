---
import { generateToc } from '@utils/data-util';
import Headings from './Headings.astro';

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<details
  open
  class="mx-auto mt-4 w-full max-w-3xl rounded-lg bg-black/5 p-2 details-content:-ml-0.5 dark:bg-white/5"
>
  <summary class="cursor-pointer px-3 py-1.5 font-semibold transition-colors"
    >목차</summary
  >
  {
    toc && toc.length > 0 && (
      <>
        {toc.map((heading) => (
          <Headings heading={heading} />
        ))}
      </>
    )
  }
</details>

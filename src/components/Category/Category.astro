---
type Props = {
  category: string;
};
const { category } = Astro.props;
const categoryColors: { [key: string]: string } = {
  Tech: 'text-content',
  Project: 'text-accent',
  Diary: 'text-green-700 dark:text-green-300',
};

const textColorClass = categoryColors[category];
---

<span class=`w-fit rounded-md ${textColorClass}`>
  {category}
</span>

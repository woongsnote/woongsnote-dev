---
import type { PostsByYear } from '@utils/types';
import PostList from '@/components/Posts/PostList.astro';

type Props = {
  year: string;
  posts: PostsByYear[typeof year];
};

const { year, posts } = Astro.props;
---

<section class="my-8 flex flex-col space-y-2 lg:space-y-4">
  <h2 class="mb-2 text-2xl font-bold   lg:text-3xl">{year}</h2>
  <PostList posts={posts} />
</section>

---
import { getCollection } from 'astro:content';
import HomePagination from '@components/HomePagination.astro';
import Base from '@layouts/Base.astro';
import ARticles from '@layouts/Articles.astro';

const RECENT_POSTS_MAX = 6;

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b .data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, RECENT_POSTS_MAX);
  
const tags = [
  ...new Set(
    recentPosts.map((post) => post.data.tags).flat()
  ),
];
---

<Base title="woongsnote.dev">
  <ARticles posts={recentPosts} tags={tags} />
  <HomePagination />
</Base>

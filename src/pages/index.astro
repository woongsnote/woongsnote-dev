---
import { getCollection } from 'astro:content';
import HomePagination from '@components/HomePagination.astro';
import Base from '@layouts/Base.astro';
import Posts from '@layouts/Posts.astro';
import PostList from '@components/PostList.astro';
import TagList from '@components/TagList.astro';
import config from '@config/config.json';

const RECENT_POSTS_MAX = config.site.pageSize;

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, RECENT_POSTS_MAX);

const tags = [...new Set(recentPosts.map((post) => post.data.tags).flat())];
---

<Base title="woongsnote.dev">
  <Posts>
    <PostList posts={recentPosts} />
    <TagList tags={tags} />
  </Posts>
  <HomePagination />
</Base>

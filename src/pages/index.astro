---
import { getCollection } from 'astro:content';
import HomePagination from '@components/HomePagination.astro';
import Base from '@layouts/Base.astro';
import Posts from '@layouts/Posts.astro';
import config from '@config/config.json';
import Hero from '@components/Hero.astro';

const RECENT_POSTS_LENGTH = config.site.pageSize;

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, RECENT_POSTS_LENGTH);

const tags = [...new Set(recentPosts.map((post) => post.data.tags).flat())];
---

<Base title="woongsnote.dev">
  <Hero />
  <Posts posts={recentPosts} tags={tags} />
  <HomePagination />
</Base>
